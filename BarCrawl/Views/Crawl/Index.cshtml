@model IEnumerable<BarCrawl.Models.Crawl>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CrawlID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CrawlID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CrawlID">Delete</a>
                <a asp-action="Join" asp-route-id="@item.CrawlID">Join</a>
            </td>
        </tr>
}
    </tbody>
</table>
