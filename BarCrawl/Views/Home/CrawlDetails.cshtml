@model IEnumerable<BarCrawl.Models.Barcrawl>

@{
    ViewData["Title"] = "CrawlDetails";
}
    <header>
        <link rel="stylesheet" href="~/site.css" />
    </header>
<h1>@ViewBag.CrawlName</h1>
<div class="left">
    <iframe class="route-map" frameborder="1"
            src="@ViewBag.gmapurl"
            allowfullscreen></iframe>
    </iframe>
</div>

<div>
    <a asp-controller="Crawl" asp-action="Join" asp-route-id="@ViewBag.CrawlID">Join</a>
    @ViewBag.alreadyjoined

    <h3>Participants:</h3>
    @foreach (string s in ViewBag.Users)
    {
        @s <br />
    }
   
</div>
<div style="padding-top:30px">
    @if (ViewBag.CrawlTheme != null)
    {
        <h2>Theme:</h2>
        @ViewBag.CrawlTheme
    }


</div>

<div class="below">
    <table class="table">
        <thead>
            <h2>Route Stops</h2>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Location
                </th>
                <th>
                    Price
                </th>
                <th>
                    Rating
                </th>



            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        <a href=@Html.DisplayFor(modelItem => item.bar.Url) target="_blank">@Html.DisplayFor(modelItem => item.bar.Name)</a>
                    </td>
                    <td>
                        <iframe width="600" height="100" frameborder="1" style="border:1"
                                src="https://www.google.com/maps/embed/v1/streetview?key=AIzaSyBdac79PQX5UeDPlBxeExEgtE0dYxQmG8s&location=@item.bar.Latitude,@item.bar.Longitude&heading=210&pitch=5&fov=50" allowfullscreen></iframe>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.bar.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.bar.Rating)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>



