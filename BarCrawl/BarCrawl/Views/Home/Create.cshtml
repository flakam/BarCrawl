<center>
    <h2>Create New Crawl</h2>

    <form action="Result" method="post">

        <div align="left">

            <!--PICK STATE & CITY-->
            State: &nbsp

            <input type="hidden" name="country" id="countryId" value="US" />
            <select name="state" class="states order-alpha" id="stateId">
                <option value="">Select State</option>
            </select><br /><br />
            City:&nbsp &nbsp;
            <select name="city" class="cities order-pop limit-pop-20000" id="cityId">
                <option value="">Select City</option>
            </select><br /><br />
            Price:&nbsp &nbsp;
            <select name="price" required>

                <option value="1">$</option>
                <option value="1,2" min="1" max="2">$$</option>
                <option value="1,2,3" min="1" max="3">$$$</option>
                <option value="1,2,3,4" min="1" max="4">$$$$</option>
            </select><br /><br />

            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
            <script src="//geodata.solutions/includes/statecity.js"></script>

            Number of Stops: &nbsp
            <input type="number" name="numBars" />
            <br /><br />


            Minimum Yelp rating (1-5) :&nbsp
            <input type="number" name="rating" min="1" max="5" required /> <br /><br /><br />

            <input type="submit" class="btn btn-primary" value="Submit">
        </div>
    </form>
</center> 
